{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@secureworks/apiMockData": ["libs/mock-api-data/src/index.ts"],
      "@secureworks/icons": ["libs/icons/src/index.ts"],
      "@secureworks/layout": ["libs/layout/src/index.ts"],
      "@secureworks/mockApiRequests": ["libs/mock-api-requests/src/index.ts"],
      "@secureworks/shared/assets": ["libs/shared/assets/src/index.ts"],
      "@secureworks/shared/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@secureworks/shared/environments": [
        "libs/shared/environments/src/index.ts"
      ],
      "@secureworks/shared/styles": ["libs/shared/styles/src/index.ts"],
      "@secureworks/user": ["libs/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
